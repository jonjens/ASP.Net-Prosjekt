@model IEnumerable<CodingChallengeAsp.Models.Sponsor>

@{
    ViewData["Title"] = "Index";
}

<h1>Sponsors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SponsorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SponsorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SponsorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SponsorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
