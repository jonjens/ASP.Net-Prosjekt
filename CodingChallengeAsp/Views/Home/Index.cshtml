@model IEnumerable<CodingChallengeAsp.Models.Player>



@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Search for players</h1>
    <br />

    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        @Html.TextBox("search")<input type="submit" value="Search" />
    }

    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Shirt Number</th>
                <th>TeamId</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" style="color:red">
                        No match
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlayerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShirtNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamId)
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>

</div>
